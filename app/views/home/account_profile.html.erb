<div class="account">
  <div class="container">
    <%=render "left"%>
    <div class="right-profile right" id="right">
      <h1>Profile</h1>
      <input type="text" name="lastname" placeholder="James" class="short-form">
      <input type="text" name="firstname" placeholder="Lim" class="short-form">
      <input type="email" placeholder="ceo@gameberry.co.kr" class="long-form">
      <input type="password" placeholder="Old Password" class="long-form">
      <input type="password" placeholder="New Password" class="long-form">

      <form action="" method="post" enctype="multipart/form-data">
        <div class="upload">
          <input type="file" name="upload" placeholder="load">
        </div>
      </form>
      <p class="upload-info">JPG, GIF or PNG, Max size of 000k</p>

      <div class="checkbox">
        <label>
          <input type="checkbox">
          <p>Receive general news (Featured projects, events) from us</p>
        </label>
      </div>
      <div class="checkbox">
        <label>
          <input type="checkbox">
          <p><span>(Publisher)</span> Receive notice when the new biddings pop for your interested country and marketing type</p>
        </label>
      </div>
      <button type="submit" class="btn btn-default" data-toggle="modal" data-target="#myModal">Save</button>
    </div>
  </div>
</div>




<!-- Save Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <p>Your account has been updated</p>
      <button type="button" class="btn btn-default">Thank's</button>
    </div><!-- modal-content -->
  </div><!-- modal-dialog -->
</div><!-- modal -->










<script>
  $('#myModal').modal(options)

</script>

