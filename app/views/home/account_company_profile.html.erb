<script>
  function new_check(){
    if ($("input:checkbox[id='first_time']").is(":checked")){
        $("#detail").show();
    }
    else{
    
        $("#detail").hide();
    }
      
  }
</script>

<div class="account">
  <div class="container">
    <%= render "/home/left"%>
    <div class="right-company-profile">
      <h1>Company Profile</h1>
      <form action="/users/company_update" method="post" enctype="multipart/form-data">
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
        <input type="text" name="company_name" data-autocomplete="/home/autocomplete_company_name" placeholder="Company Name" <%if @company != nil%>value="<%=@company.name%>"<%end%>>
        <%if @company == nil%>
          <input type="checkbox"  id="first_time" name="first_time" onclick="new_check();">first time company?<br>
        <%end%>
        <div id="detail"<%if @company == nil%>style="display:none;"<%end%>>
          <input type="text" placeholder="Located In" name="located_in" value="<%if @company != nil%><%=@company.location%><%end%>">
          <input type="text" placeholder="Number of Employee" name="number_of_employee" value="<%if @company != nil%><%=@company.num_employee%><%end%>">
          <input type="text" placeholder="Website" value="<%if @company != nil%><%=@company.website%><%end%>" name="website">
          <textarea rows="4" placeholder="Company Introduction" name="company_introduction" ><%if @company != nil%><%= @company.introduction%><%end%></textarea>
          <%if @company != nil && @company.logo.url != "/logos/original/missing.png"%>
            <img src="<%=@company.logo.url(:thumb)%>">
          <%end%>
            <div class="upload">
              <input type="file" name="upload" placeholder="load">
            </div>
          <p class="upload-info">JPG, GIF or PNG, Max size of 000k</p>

          <p>Publisher only</p>
        </div>
        <button type="submit" class="btn btn-default">Save</button>
      </div>
      </form>
    </div>
  </div>
</div>




