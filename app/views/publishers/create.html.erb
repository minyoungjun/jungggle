                <ul>
                  <%marketing2.child_types.each do |marketing3|%>
                    <li><%=marketing3.name%></li>
                    <%if marketing3.filter != 4%>
                    <li>
                      <ul>
                        <%marketing3.child_types.each do |marketing4|%>
                          <li><%=marketing4.name%></li>
                        <%end%>
                      </ul>
                    </li>
                    <%end%>
                  <%end%>
                </ul>
                </li>
                <%end%>
              <%end%>
              </ul>
          </li>
          <%end%>
        <%end%>
      </ul>
    </td>
    
  </tr>
  <tr>
    <td>
      Service Detail
    </td>
    <td>
      <textarea name="detail">
      </textarea>
    </td>
  </tr>
  <tr>
    <td>
      Cost
    </td>
    <td>
      <input type="radio" name="cost_rate" value="flat">Flat Rate<br>
      <input type="radio" name="cost_rate" value="multi">Multiple Rate
      <br>
      <input type="text" name="cost">
    </td>
  </tr>
  <tr>
    <td>
      Country
    </td>
    <td>
      <select>
        <%@countries.each do |country|%>
          <option value ="<%=country.name%>"><%=country.name%></option>
        <%end%>
          
      </td>

  </tr> 
  <tr>
    <td>
      Payment method
    </td>
    <td>
      <select name="payment">
        <% @payments.each do |payment|%>
          <option value="<%=payment.name%>"><%=payment.name%></option>
        <%end%>
        </select>
    </td>
  </tr>
</table>
