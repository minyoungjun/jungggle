<h1>Create Service</h1>
<form action="create_process" method="post">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
  
<table>
  <tr>
    <td>
      Language
    </td>
    <td>
      <select name="language">
        <%@languages.each do |lan|%>
          <option value="<%=lan.id%>">
            <%=lan.name%>
          </option>
        <%end%>
      </select>
    </td>
  </tr>
  <tr>  

    <td>
      Service Name
    </td>
    <td>
      <input type="text" name="service_name">
    </td>

  </tr>
  <tr>
    <td>
      Marketing Type
    </td>
    <td>
      <ul>
        <%@marketing.each do |marketing|%>
          <li><input type="radio" name="marketing_type" value="<%=marketing.id%>"><%=marketing.name%></li>
        <%if marketing.filter != 4%>
        <li>
          <ul>
            <%marketing.child_types.each do |marketing2|%>
              <li><input type="radio" name="marketing_type" value="<%=marketing2.id%>"><%=marketing2.name%></li>
              <%if marketing2.filter != 4%>
              <li>
                <ul>
                  <%marketing2.child_types.each do |marketing3|%>
                    <li><input type="radio" name="marketing_type" value="<%=marketing3.id%>"><%=marketing3.name%></li>
                    <%if marketing3.filter != 4%>
                    <li>
                      <ul>
                        <%marketing3.child_types.each do |marketing4|%>
                          <li><input type="radio" name="marketing_type" value="<%=marketing4.id%>"><%=marketing4.name%></li>
                        <%end%>
                      </ul>
                    </li>
                    <%end%>
                  <%end%>
                </ul>
                </li>
                <%end%>
              <%end%>
              </ul>
          </li>
          <%end%>
        <%end%>
      </ul>
    </td>
    
  </tr>
  <tr>
    <td>
      Service Detail
    </td>
    <td>
      <textarea name="detail"></textarea>
    </td>
  </tr>
  <tr>
    <td>
      Cost
    </td>
    <td>
      <input type="radio" name="cost_rate" value="flat">Flat Rate<br>
      <input type="radio" name="cost_rate" value="multi">Multiple Rate
      <br>
      <input type="text" name="cost">
    </td>
  </tr>
  <tr>
    <td>
      Country
    </td>
    <td>
      <select name="country">
        <%@countries.each do |country|%>
          <option value ="<%=country.id%>"><%=country.name%></option>
        <%end%>
          
      </td>

    </tr> 
    <tr>
      <td>
        Minimium Budget
      </td>
      <td>
        <input type="checkbox"><input type="text" name="minimum_budget">
      </td>
    </tr>
  <tr>
    <td>
      Payment method
    </td>
    <td>
        <% @payments.each do |payment|%>
          <input type="checkbox" name="payment_<%=payment.id%>" value="<%=payment.id%>"><%=payment.name%></option>
        <%end%>
    </td>
  </tr>
</table>
<h2>Company Introduction</h2>
<input type="text" placeholder="Company Name" name="company_name"><br>
<input type="file" name="upload_logo"><br>
<input type="submit"><br>
</form>
