<h1>Create Service</h1>
<form action="create_process">
<table>
  <tr>
    <td>
      Language
    </td>
    <td>
      <select>
        <%@languages.each do |lan|%>
          <option value="<%=lan.name%>">
            <%=lan.name%>
          </option>
        <%end%>
      </select>
    </td>
  </tr>
  <tr>  

    <td>
      Service Name
    </td>
    <td>
      <input type="text" name="service_name">
    </td>

  </tr>
  <tr>
    <td>
      Marketing Type
    </td>
    <td>
      <ul>
        <%@marketing.each do |marketing|%>
          <li><%=marketing.name%></li>
        <%if marketing.filter != 4%>
        <li>
          <ul>
            <%marketing.child_types.each do |marketing2|%>
              <li><%=marketing2.name%></li>
              <%if marketing2.filter != 4%>
