function delete_intro(id){
  $('#introduction_name_' + id).html("");
  $("#company_introduction_" + id).remove();
  $("#logo_file_box").append('<input type="file" name="company_introduction[' + id + ']" id="company_introduction_' + id + '" onchange="intro_upload(' + id + ');">');
