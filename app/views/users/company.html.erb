      <script>
function new_company(){
  $(".company-name-drop").hide();
};
function auto_func(id){
  if ($('#title_' + id).val() != ""){
          $(".company-name-drop").show();
          $(".auto_div").hide();
            var auto_count = 0
          $(".auto_div").each(function(){
            if ($(this).data("company").indexOf($('#title_' + id).val()) != -1 )
            {
                auto_count = auto_count + 1;
                $(this).show();             
                }
            
                });
            if (auto_count == 0){
              $(".auto_div").hide();
            }
          }else{
          $(".auto_div").hide();
          $(".company-name-drop").hide();
          
          }

}


      </script>



