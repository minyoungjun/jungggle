<div class="account">
  <div class="container">
    <%=render "/home/left"%>
    <div class="right-member">
      <h1>Member</h1>
      <h4><%=@company.comlangs.first.name%></h4>
      <table>
        <tr class="table-header">
          <td>Name</td>
          <td>Email</td>
          <td>Owner</td>
        </tr>
        <%@company.members.each do |member|%>
        <tr class="table-body">
          <td class="name"><%=member.user.first_name%> <%=member.user.last_name%></td>
          <td class="email"><%=member.user.email%></td>
          <td><img src="/assets/my_account/person_1_gray.png"><%=member.owner%></td>
        </tr>
        <%end%>
      </table>
      <h3>Waiting for approval</h3>
      <table>
        <tr class="table-header">
          <td>Name</td>
          <td>Email</td>
          <td>Access</td>
        </tr>
        <tr class="table-body">
          <td class="name">peter carpenter</td>
          <td class="email">bill_willian@gmail.com</td>
          <td>
            <button type="button" class="btn btn-left">approve</button>
            <button type="button" class="btn btn-right">disapprove</button>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>





