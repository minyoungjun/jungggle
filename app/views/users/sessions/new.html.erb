<!-- log.css.scss -->

<div class="login">
  <a href="/">
    <img src="/assets/logo-01.png" class="title-logo">
    <h5 class="beta">Beta</h5>
  </a>
  <div class="sns-login-area">
    <a href="<%=user_omniauth_authorize_path(:linkedin)%>"><div class="sns-login linkedin"><img src="/assets/main/log_linkedin.png">Log In with Linkedin</div></a>
    <a href="<%=user_omniauth_authorize_path(:facebook)%>"><div class="sns-login facebook"><img src="/assets/main/log_facebook.png">Log In with Facebook</div></a>
  </div>
  <h3>or</h3>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div>
    <%= f.email_field :email, autofocus: true, placeholder: "Email", required: true %></div>

    <div>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", required: true %></div>

  <br>
    <input type="hidden" name="user[remember_me]" value="0" id="remember_hidden">
    <div class="check" onclick="remember_toggle();" ><img src="/assets/my_account/checkbox-01.png"  style="margin-right: 6px; vertical-align: middle; cursor:pointer;" id="remember_img">Remember me</div>

    <div class="log-btn"><%= f.submit "Log In" %></div>
  <% end %>

  <div class="login-foot">
    <p>Don't have an account?</p>
    <a href="/users/sign_up"><h5>Sign up</h5></a>
    <a href="/users/password/new"><h5>Forgot your password?</h5></a>
  </div>
</div>
<script>
function remember_toggle(){
  if(parseInt($("#remember_hidden").val()) == 0){
    $("#remember_img").attr("src", "/assets/my_account/checkbox-02.png");
    $("#remember_hidden").val(1);
  
  }else{
    $("#remember_img").attr("src", "/assets/my_account/checkbox-01.png");
    $("#remember_hidden").val(0);
  
  }
}
</script>
