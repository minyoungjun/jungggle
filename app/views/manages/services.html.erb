<div class="account">
  <div class="container">
    <%= render "/home/left"%>
    <div class="right-manage-service">
      <h1>Manage Service for Admin</h1>
      <div class="sub-title">
        <h3>All Services</h3>
        <button type="button" class="btn btn-default" onclick="location.href= '/manages/create';">Create Service</button>
      </div>
      <table>
        <tr class="table-header">
          <td>Last Update</td>
          <td>Service Name</td>
          <td>Country</td>
          <td class="marketing">Marketing Type</td>
          <td>Cost</td>
          <td>Earning</td>
          <td>Status</td>
          <td></td>
        </tr>
        <%@services.each do |service|%>
          <tr class="table-body">
            <td><%=service.updated_at.to_s[0..9]%></td>
            <td class="name"><%=service.prolangs.first.title%></td>
            <td><%service.procons.each do |procon|%><%=procon.country.name%><br><%end%></td>
            <td class="marketing"><%service.marketingtype.upper_types.each do |marketing|%><%=marketing.name%>/<%end%></td>
            <td class="font-bold">$0.1 - 0.7</td>
            <td class="font-bold">$0</td>
            <td><img src="/assets/my_account/on.png"></td>
            <td><div class="embed-btn" data-toggle="modal" data-target="#Modal-embed"><img src="/assets/my_account/embed.png"><br>EMBED</div></td>
          </tr>
        <%end%>
      </table>
    </div>
  </div>
</div>




<!-- embed Modal -->
